<mah:MetroWindow
        x:Class="WatchList.WPF.CinemaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"            
        BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderThickness="1"
        WindowStartupLocation="CenterScreen"
        Title="CinemaWindow" 
        Height="550" Width="700" 
        MinHeight="550" MinWidth="700"
        DataContext="{Binding CinemaWindowViewModel, Source={StaticResource ViewModelLocator}}">
    <Grid>
        <Frame Content="{Binding CurrentPage, Mode=OneWay}" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</mah:MetroWindow>
